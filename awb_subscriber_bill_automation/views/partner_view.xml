<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_res_partner_form" model="ir.ui.view">
        <field name="name">inherit.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="res_partner.view_res_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='subscription']" position="inside">
                <group>
                    <group>
                        <field name="last_reload_date"/>
                        <!-- <field name="account_subclassification"/> -->
                    </group>
                </group>
            </xpath>
    
        </field>
    </record>

    <record model="ir.actions.server" id="action_account_reports_customer_generate_number">
        <field name="name">Generate Customer Number</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="binding_model_id" ref="model_res_partner" />
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_assign_customer_id()
        </field>
    </record>

</odoo>
